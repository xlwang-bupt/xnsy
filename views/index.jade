extends layout

block content
  div.head_all
    div.head
    table(border='0', align='center', cellpadding='0', cellspacing='0')
      tr
        td
          div.menu
            ul
              li
                a(class='hide', href='/?name=xlwang') 首页
              li
                a(class='hide', href='/1') 申报书
              li
                a(class='hide', href='/2') 成果简介
              li
                a(class='hide', href='/3') 科学总结
              li
                a(class='hide', href='/4') 创新点
              li
                a(class='hide', href='/5') 应用情况
              li
                a(class='hide', href='/6') 获奖情况
              li
                a(class='hide', href='/7') 附件材料
              li
                a(class='hide', href='/8') 主要完成人
              li
                a(class='hide', href='/9') 完成单位
              li
                a(class='hide', href='/10') 成果鉴定
              li
                a(class='hide', href='/11') 媒体评价
            div.clear
  div.main_all
    center
      section#rt-showcase-surround
        #rt-showcase.slider-container.rt-overlay-dark
          .rt-container.slider-container
            .rt-grid-12.rt-alpha.rt-omega
              link(rel='stylesheet', href='/style/lb.css')
              .csslider1.autoplay
                input#cs_slide1_0.cs_anchor.slide(name='cs_anchor1', autocomplete='off', type='radio')
                input#cs_slide1_1.cs_anchor.slide(name='cs_anchor1', autocomplete='off', type='radio')
                input#cs_slide1_2.cs_anchor.slide(name='cs_anchor1', autocomplete='off', type='radio')
                input#cs_play1.cs_anchor(name='cs_anchor1', autocomplete='off', type='radio', checked='')
                input#cs_pause1.cs_anchor(name='cs_anchor1', autocomplete='off', type='radio')
                ul
                  div(style='width: 100%; visibility: hidden; font-size: 0px; line-height: 0;')
                    img(src='images/sbs.jpg', style='width: 100%;')
                  li.num0.img
                    img(src='images/sbs.jpg', alt='Clouds', title='Clouds')
                  li.num1.img
                    img(src='images/cg.jpg', alt='Typewriter', title='Typewriter')
                  li.num2.img
                    img(src='images/zj.jpg', alt='Bicycle', title='Bicycle')
                .cs_description
                  label.num0
                    span.cs_title
                      a(href='/1')
                        span.cs_wrapper 申报书
                  label.num1
                    span.cs_title
                      a(href='/2')
                        span.cs_wrapper 成果
                  label.num2
                    span.cs_title
                      a(href='/3')
                        span.cs_wrapper 总结
                .cs_arrowprev
                  label.num0(for='cs_slide1_0')
                  label.num1(for='cs_slide1_1')
                  label.num2(for='cs_slide1_2')
                .cs_arrownext
                  label.num0(for='cs_slide1_0')
                  label.num1(for='cs_slide1_1')
                  label.num2(for='cs_slide1_2')
                .cs_bullets
                  label.num0(for='cs_slide1_0')
                    span.cs_point
                    span.cs_thumb
                      img(src='images/sbs', alt='Clouds', title='Clouds')
                  label.num1(for='cs_slide1_1')
                    span.cs_point
                    span.cs_thumb
                      img(src='images/cg.jpg', alt='Typewriter', title='Typewriter')
                  label.num2(for='cs_slide1_2')
                    span.cs_point
                    span.cs_thumb
                      img(src='images/small/zj.jpg', alt='Bicycle', title='Bicycle')
            .clear
